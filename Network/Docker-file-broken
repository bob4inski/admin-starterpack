FROM ubuntu:24.04 AS base

RUN apt-get update \
    && apt-get install -y \
        iputils-ping \
        curl \
        net-tools \
        iproute2 \
        tcpdump \
        strace \
        lsof \
        nginx \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

COPY ./entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

CMD [ "/bin/bash" ]
